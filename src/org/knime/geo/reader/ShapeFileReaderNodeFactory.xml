<?xml version="1.0" encoding="UTF-8"?>
<knimeNode icon="./shp.png" type="Manipulator" xmlns="http://knime.org/node/v2.8" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://knime.org/node/v2.10 http://knime.org/node/v2.10.xsd">
    <name>Shapefile Reader</name>
    
    <shortDescription>
        Read geometries from a shapefile
    </shortDescription>
    
    <fullDescription>
        <intro>
        This node reads an ESRI <a href="https://www.esri.com/library/whitepapers/pdfs/shapefile.pdf">shapefile</a> denoted by a source location and 
        then generate an output table containing list of geometries and other non-spatial attributes in the shapefile. 
        The output table contains a geometry column ("the_geom") in GeoJSON format. A map view option of the shapefile is also available for this node.
        </intro>
        
        
        <option name="Source Shapefile">Location or URL of the shapefile to read</option>
        <!--option name="short name of second option (like in the dialog)">description of second option</option-->
        <!-- possibly more options that can also be grouped by tabs -->
        <!--
        <tab name="Standard Options">
            <option name="short name of first option (like in the dialog)">description of first option</option>
            <option name="short name of second option (like in the dialog)">description of second option</option>
        </tab>
        <tab name="Advanced Options">
            <option name="short name of first advanced option (like in the dialog)">description of first advanced option</option>
        </tab>
        -->
    </fullDescription>
    
    <ports>
        <!--inPort index="0" name="In-Port name">Description of first input port...</inPort-->
        <!-- possibly more input ports here-->
        <outPort index="0" name="Geometry Table">Output table with a geometry column ("the_geom") in GeoJSON format and other 
        non-spatial attributes in the shapefile</outPort>
        <!-- possibly more output ports here-->
    </ports>    
    <views>
        <view index="0" name="View Map">Display the shape file in Geo Map</view>
        <!--view index="1" name="name of second view">Description of second view...</view-->
    </views>
</knimeNode>
